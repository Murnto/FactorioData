<!DOCTYPE html>
<html lang="en">
<head>
    <% include layout/head.ejs %>
</head>
<body>
<% include layout/header.ejs %>
<div class="container">
    <h2>Technology</h2>
    <table class="table" id="table">
        <thead>
            <tr>
                <!--<th>Icon</th>-->
                <th>Name</th>
                <th>Cost</th>
            </tr>
        </thead>
        <tbody>
        <%
            var techKeys = Object.keys(technology);
            for (var i = 0; i < techKeys.length; i++) {
                var tech = technology[techKeys[i]];
        %>
        <tr>
            <!--<td><%- embedImg('technology', tech.name, 'tech-img') %></td>-->
            <td>
                <a href="/pack/<%= modpack %>/tech/<%= tech.name %>">
                    <%= tech.title %>
                </a>
            </td>
            <td>
                <div class="tech-units">
                    <div class="tech-ingd">
                        <%
                        for (var idxIng = 0; idxIng < tech.unit.ingredients.length; idxIng++) {
                            var ingd = tech.unit.ingredients[idxIng]; %>
                        <%= ingd[2] %>x <%- embedItemPopover(ingd[1]) %>
                        <% } %>
                    </div>
                    x <%= tech.unit.count %>
                </div>
            </td>
        </tr>
        <% } %>
        </tbody>
    </table>
</div>

<footer>
    <% include layout/footer.ejs %>
</footer>

</body>
</html>
