extends layout

block head
    style(type='text/css').
        html, body {
            height: calc(100% - 33pt);
            margin: 0;
        }

        #cblt_content {
            display: block;
            width: 100%;
            height: 100%;
            margin-top: -20px;
            box-sizing: border-box;
            -webkit-box-sizing: border-box;
            -moz-box-sizing: border-box;
            border: 0;
        }


block content
    iframe#cblt_content(src="index.html")