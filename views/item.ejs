            <th>Result</th>
            <th>Unlocked By</th>
        </tr>
        </thead>
        <tbody>
    <% for (var idx = 0; idx < uses.length; idx++) {
        var r = uses[idx];
    %>
    <% include partials/recipe.ejs %>
    <% } %>
        </tbody>
    </table>
</div>

<footer>
